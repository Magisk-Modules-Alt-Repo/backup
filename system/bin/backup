#!/system/bin/sh
# Written by Draco (tytydraco @ GitHub)

# Where to backup by default
BACKUP_PATH="/sdcard/backup"

# Log in red and exit
err() {
	echo -e "\e[91m[!] $@\e[39m"
	exit 1
}

# Log in white and continue (unnecessary)
dbg() {
	echo -e "[*] $@"
}

usage() {
	echo -n "Usage: `basename $0` [OPTIONS] [PARTITIONS]
Options:
  -h			Show usage
  -d			Backup path (default: $BACKUP_PATH)

Partition Examples:
  all
  boot
  persist
  system
  userdata
  vendor
"
}

# Check for root permissions
[[ `id -u` -ne 0 ]] && err "No root permissions. Exiting."

while getopts ":h:d" opt; do
	case $opt in
		h)
			usage
			exit 0
			;;
		d)
			BACKUP_PATH="$OPTARG"
			;;
		*)
			usage
			exit 1
			;;
	esac
done
shift $((OPTIND-1))

PARTS="$@"

[[ -z "$@" ]] && err "No partitions specified. Exiting."

# Backup all partitions
[[ "$PARTS" == "all" ]] && PARTS=`ls /dev/block/bootdevice/by-name/`

# Backup specified partitions
for part in $PARTS
do
	dbg "Backing up $part..."
	dd if="/dev/block/bootdevice/by-name/$part" of="$BACKUP_PATH/$part.img"
done

dbg "Done with: $@."
